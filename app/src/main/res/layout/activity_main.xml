<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_gravity="center"
        android:elevation="4dp"
        android:clipToOutline="true">

        <!-- ImageView for Computer Image -->
        <ImageView
            android:id="@+id/computerImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image"
            android:background="#90CAF9"
            android:layout_marginBottom="16dp"
            android:padding="8dp" />

        <!-- TextView for Brand Name -->
        <TextView
            android:id="@+id/brandNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand: "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <!-- TextView for Model Name -->
        <TextView
            android:id="@+id/modelNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model: "
            android:textSize="18sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp" />

        <!-- TextView for Serial Number -->
        <TextView
            android:id="@+id/serialNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serial Number: "
            android:textSize="18sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp" />

        <!-- TextView for Stock Quantity -->
        <TextView
            android:id="@+id/stockQuantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock Quantity: "
            android:textSize="18sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp" />

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- TextView for CPU Speed -->
        <TextView
            android:id="@+id/cpuSpeedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPU Speed: "
            android:textSize="16sp"
            android:textColor="#555555" />

        <!-- TextView for Memory Size -->
        <TextView
            android:id="@+id/memorySizeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memory: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp" />

        <!-- TextView for Hard Disk Size -->
        <TextView
            android:id="@+id/hardDiskSizeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard Disk: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp" />

        <!-- TextView for Price -->
        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="16dp" />

        <!-- Button to go back to AddComputerActivity -->
        <Button
            android:id="@+id/openAddComputerActivityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Computer"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:elevation="2dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>
