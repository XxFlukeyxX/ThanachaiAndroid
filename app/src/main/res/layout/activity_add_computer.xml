<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E1F5FE"> <!-- พื้นหลังสีฟ้าอ่อน -->

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_image"
                android:background="#90CAF9"
                android:layout_marginBottom="16dp"
                android:padding="8dp" />

            <EditText
                android:id="@+id/brandNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Brand Name"
                android:backgroundTint="#BBDEFB"
                android:textColor="#0D47A1"
                android:textColorHint="#90CAF9"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp"/>

            <EditText
                android:id="@+id/modelNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Model Name"
                android:backgroundTint="#BBDEFB"
                android:textColor="#0D47A1"
                android:textColorHint="#90CAF9"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp"/>

            <EditText
                android:id="@+id/serialNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Serial Number"
                android:backgroundTint="#BBDEFB"
                android:textColor="#0D47A1"
                android:textColorHint="#90CAF9"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp"/>

            <EditText
                android:id="@+id/stockQuantityEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Stock Quantity"
                android:backgroundTint="#BBDEFB"
                android:textColor="#0D47A1"
                android:textColorHint="#90CAF9"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp"/>

            <EditText
                android:id="@+id/priceEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price"
                android:backgroundTint="#BBDEFB"
                android:textColor="#0D47A1"
                android:textColorHint="#90CAF9"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp"/>

            <EditText
                android:id="@+id/cpuSpeedEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CPU Speed"
                android:backgroundTint="#BBDEFB"
                android:textColor="#0D47A1"
                android:textColorHint="#90CAF9"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp"/>

            <EditText
                android:id="@+id/memorySizeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Memory Size"
                android:backgroundTint="#BBDEFB"
                android:textColor="#0D47A1"
                android:textColorHint="#90CAF9"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp"/>

            <EditText
                android:id="@+id/hardDiskSizeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hard Disk Size"
                android:backgroundTint="#BBDEFB"
                android:textColor="#0D47A1"
                android:textColorHint="#90CAF9"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"/>

            <Button
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Computer"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1976D2"
                android:layout_marginTop="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:elevation="4dp"
                android:layout_gravity="center"/>

            <!-- ปุ่มสำหรับเปิด MainActivity -->
            <Button
                android:id="@+id/openMainActivityButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to Detail"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1976D2"
                android:layout_marginTop="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:elevation="4dp"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
